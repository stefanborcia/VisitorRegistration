@page "/"
@inject NavigationManager NavigationManager
<PageTitle>Home</PageTitle>

<div class="home-container">
    <div class="home-header" style="text-align: center; margin-bottom: 20px;">
        <img src="images/logo.png" alt="Company Logo" class="company-logo" />
    </div>
    <div>
        <div>
            <h4>Please select an option below to begin the visitor process:</h4>
        </div>
        <div class="home-buttons">
            <button class="btn btn-success" @onclick="NavigateToSignIn" style="font-size: 24px; display: flex; align-items: center;">
                <svg xmlns="http://www.w3.org/2000/svg" height="40" viewBox="0 0 24 24" width="40" fill="white" style="margin-right: 8px;">
                    <path d="M10 19v-3H5v-8h5V5l7 7-7 7Zm9-14H10V3h9q.825 0 1.413.587Q21 4.175 21 5v14q0 .825-.587 1.413Q19.825 21 19 21h-9v-2h9Z" />
                </svg>
                Sign In
            </button>
            <button class="btn btn-danger" @onclick="NavigateToSignOut" style="font-size: 24px; display: flex; align-items: center;">
                <svg xmlns="http://www.w3.org/2000/svg" height="40" viewBox="0 0 24 24" width="40" fill="white" style="margin-right: 8px;">
                    <path d="M14 19v-3h5v-8h-5V5l-7 7 7 7Zm-9 2q-.825 0-1.413-.587Q3 19.825 3 19V5q0-.825.587-1.413Q4.175 3 5 3h9v2H5v14h9v2Z" />
                </svg>
                Sign Out
            </button>
        </div>
    </div>
</div>


@code {
    private void NavigateToSignIn()
    {
        NavigationManager.NavigateTo("/visitor-sign-in");
    }

    private void NavigateToSignOut()
    {
        NavigationManager.NavigateTo("/visitor-sign-out");
    }
}